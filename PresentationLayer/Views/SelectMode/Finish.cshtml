@using PresentationLayer.Controllers;
@{
    ViewData["Title"] = "Результат";
}

<head>
    <link href="~/css/finish.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

</head>

<body>
    <header class="head__part">
        <div class="settings">
<div></div>
        </div>
    </header>
    <main class="congratulaton">
        <div class="wrapper">
            <div class="finish__text">Победа!</div>
            <div class="finish__level">Вы прошли викторину на уровне сложности: "@ViewBag.DifficultyLevel"</div>
            <div class="correct__answ">Вы ответили на @ViewBag.CorrectAnswersCount из @ViewBag.TotalQuestionsCount верно!</div>
            <a asp-controller="Home" asp-action="SelectMode" id="backButton" class="return__button">Главное меню</a>
        </div>
    </main>
    <footer></footer>
    <!-- Подключение jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Подключение Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/easy-handler.js"></script>
</body>